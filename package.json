    "name": "Juan Mart√≠n Muda",
    "email": "zumly.js@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://zumly.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/zumly/zumly.git"
  },
  "bugs": {
    "url": "https://github.com/zumly/zumly/issues"
  },
  "keywords": [
    "zumly",
